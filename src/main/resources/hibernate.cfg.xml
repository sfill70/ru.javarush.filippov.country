<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.p6spy.engine.spy.P6SpyDriver</property>
        <property name="connection.url">jdbc:p6spy:mysql://localhost:33010/world?useSSL=false&amp;serverTimezone=UTC
        </property>
        <property name="connection.username">root</property>
        <property name="connection.password">pass</property>
        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">10</property>
        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <!-- Echo the SQL to stdout Вывод запросов в консоль -->
        <property name="show_sql">true</property>
        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>
        <!-- Drop and re-create or validate or update the database schema on startup -->
        <property name="hbm2ddl.auto">validate</property>
        <property name="format_sql">true</property>
        <!--properties.put(Environment.STATEMENT_BATCH_SIZE, "100");-->
        <property name="hibernate.jdbc.batch_size">100</property>
        <!--mapping Entity-->
        <mapping class="ru.javarush.country.entity.City"/>
        <mapping class="ru.javarush.country.entity.Country"/>
        <mapping class="ru.javarush.country.entity.CountryLanguage"/>

    </session-factory>
</hibernate-configuration>